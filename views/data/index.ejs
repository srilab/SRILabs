<% include ../partials/header %> 
     
     <div class="ui main text mx-5">
        <div class="ui top attached segment">
            <!--<h1>EnviroLabs Blog</h1>-->
            <div class="ui divided items">
                <h1>All Data</h1>
                <% if (data.length === 0) { %>
                      <em style="color: grey;">No data yet.</em>
                  <% } %>
                <!--<a class="btn btn-primary btn-lg mt-3 float-right" href="/blog/new">Create Post</a>-->
                <% data.forEach(function(topic) { %>
                    <div class="item">
                        <div class="content">
                            <a class="header" href="/data/<%= topic._id %>"><%= topic.title %></a>
                            <div class="meta">
                            </div>
                            <div class="description">
                                <p><%- topic.description.substring(0,100) %>...</p>
                            </div>
                            <div class="extra">
                                <a class="ui floated basic black button" href="/data/<%= topic._id %>">
                                    View Data
                                    <i class="right chevron icon"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
     
     

<% include ../partials/footer %>
