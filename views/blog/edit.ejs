<% include ../partials/header %>

<div class="container">
        <div class="row">
            <div class="col">
                <div class="d-flex justify-content-center h-100">
                    <div class="card" id="new-blog">
                        <div class="card-header">
                            <h3 class="pt-3">Edit <%= post.title %></h3>
                        </div>
                        <div class="card-body">
                            <form action="/blog/<%=post._id%>?_method=PUT" method="post">
                                <div class="form-group">
                                    <label class="text-white" for="title">Title</label>
                                    <input type="text" class="form-control" value="<%= post.title %>" name="title">
                                </div>
                                <div class="form-group">
                                    <label class="text-white" for="description">Description</label>
                                    <input type="text" class="form-control" value="<%= post.description %>" name="description">
                                </div>
                                <div class="form-group">
                                    <label class="text-white" for="post">Post</label>
                                    <textarea required name="post">  <%= post.body %></textarea>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Submit" class="btn login_btn">
                                </div>
                            </form>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-center links">
                                <a href="/blog">Go Back</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
<% include ../partials/footer %>