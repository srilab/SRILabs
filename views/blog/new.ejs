<% include ../partials/header %>

<div class="container">
        <div class="row">
            <div class="col">
                <div class="d-flex justify-content-center h-100">
                    <div class="card" id="new-blog">
                        <div class="card-header">
                            <h3 class="pt-3">New Blog Post</h3>
                        </div>
                        <div class="card-body">
                            <form action="/blog" method="post">
                                <div class="form-group">
                                    <label class="text-white" for="title">Title</label>
                                    <input type="text" class="form-control" placeholder="Blog Title" name="title" required>
                                </div>
                                <div class="form-group">
                                    <label class="text-white" for="description">Description</label>
                                    <input type="text" class="form-control" placeholder="Short Synopsis of Post" name="description" required>
                                </div>
                                <div class="form-group">
                                    <label class="text-white" for="post">Post</label>
                                    <textarea class="pl-2 pt-2" id="blogContent" placeholder="Blog Post Goes Here" required name="post"></textarea>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn login_btn">
                                </div>
                            </form>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-center links">
                                <a href="/blog">Go Back</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
<% include ../partials/footer %>