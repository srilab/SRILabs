<% include ../partials/header %> 
     
     <div class="ui main text">
        <div class="ui top attached segment">
            <!--<h1>EnviroLabs Blog</h1>-->
                <a class="ui basic black button mt-4 float-right" href="/blog/new">Create Post</a>
            <div class="ui divided items">
                <h1>EnviroLabs Blog</h1>
                <!--<a class="btn btn-primary btn-lg mt-3 float-right" href="/blog/new">Create Post</a>-->
                <% posts.forEach(function(blog) { %>
                    <div class="item">
                        <div class="content">
                            <a class="header" href="//blogs/<%= blog._id %>"><%= blog.title %></a>
                            <div class="meta">
                                <span><%= blog.createdAt.toDateString() %></span>
                            </div>
                            <div class="description">
                                <p><%- blog.description.substring(0,100) %>...</p>
                            </div>
                            <div class="extra">
                                <a class="ui floated basic black button" href="/blog/<%= blog._id %>">
                                    Read More
                                    <i class="right chevron icon"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
     
     

<% include ../partials/footer %>
