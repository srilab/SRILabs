<% include ../partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= post.title %></div>
    <div class="ui top attached">
        <div class="item">
            <div class="content">
                <span><%= post.createdAt.toDateString() %></span>
            </div>
            <div class="description">
                <p><%= post.body %></p>
            </div>
            <a class="ui orange basic button" href="/blogs/<%= post._id %>/edit">Edit</a>
            <form id="delete" action="/blogs/<%= post._id %>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete Post</button>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>